@model IEnumerable<ShopcluesShoppingPortal.Models.OrderDetail>

@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_UserView.cshtml";
}

<div class="container-history" style="margin-top:150px; height:300px;">

    <h2>Order history</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Product name</th>
                    <th>Quantity</th>
                    <th>Order date</th>
                    <th>Total amount</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Phone number</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderDetail in Model)
                {
                    <tr>
                        <td>@orderDetail.OrderID</td>
                        <td>@orderDetail.ProductName</td>
                        <td>@orderDetail.Quantity</td>
                        <td>@orderDetail.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>$@orderDetail.TotalAmount</td>
                        <td>@orderDetail.Address</td>
                        <td>@orderDetail.Pincode</td>
                        <td>@orderDetail.PhoneNumber</td>
                        <td>@orderDetail.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No orders found.</p>
    }

    <p><a href="@Url.Action("UserDashBoard", "Home")">Back to home</a></p>
</div>