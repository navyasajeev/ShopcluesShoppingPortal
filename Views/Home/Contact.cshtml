
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_View.cshtml";
}


<section class="contact">
    <div class="content">
        <!-- adding contact us page  -->
        <h2>Contact us</h2>
    </div>
    <div class="container">
        <div class="contactinfo">
            <div class="box">
                <!-- Adding contact information  -->
                <div class="icon"><i class="fa-solid fa-location-dot"></i></div>
                <div class="text">
                    <h3>Address</h3>
                    <p>46765 Shoeclues complex,Palai </p>
                </div>
            </div>
            <div class="box">
                <!-- Adding mail address with icon -->
                <div class="icon"><i class="fa-solid fa-envelope"></i></div>
                <div class="text">
                    <h3>Email</h3>
                    <p>shopclues@gmail.com</p>
                </div>
            </div>
            <div class="box">
                <!-- Adding phone number with phone  -->
                <div class="icon"><i class="fa-solid fa-phone-volume"></i></div>
                <div class="text">
                    <h3>Phone</h3>
                    <p>+917653456237</p>
                </div>
            </div>
        </div>
        <!-- adding a send form  for messages -->
        <div class="contactform">
            <form name="custom_form">
                <h2 style="text-align:center;">Send message</h2>
                <div class="input-row">
                    <!-- Adding input field for full name with label  -->
                    <div class="inputbox">
                        <label>Full name</label>
                        <input type="text" name="name" id="contact-name" onkeyup="validateName()">
                        <span id="name-error"></span>
                    </div>
                    <!-- Adding email field eith label  -->
                    <div class="inputbox">
                        <label>Email</label>
                        <input type="text" name="email" id="contact-email" onkeyup="validateEmail()">
                        <span id="email-error"></span>
                    </div>
                    <!-- Adding message field with label  -->
                    <div class="inputbox">
                        <label>Type your message...</label>
                        <textarea name="message" id="contact-message" onkeyup="validateMessage()"></textarea>
                        <span id="message-error"></span>
                    </div>
                    <!-- <Adding button to send message  -->
                    <div class="inputbox">
                        <input type="submit" name="" value="Send" onclick="return validateForm()">
                        <span id="submit-error"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>




